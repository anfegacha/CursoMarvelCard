
.Layaout
	display flex
	padding .5em
	test(brown)
	margin .5em
	flex-direction column
	min-height 100vh
	justify-content space-between
	background-image url("../images/city.jpg")
	background-size cover
	>section
		margin .5em
	&-main 
		display flex
		justify-content space-between
	&-status
		test(green)
