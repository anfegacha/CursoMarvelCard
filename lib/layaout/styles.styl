	&-battle
		test(orange)
		flex 1
		margin 0.5em
		background-image url("../images/patron.jpg")
	&-phases
		test(purple)
		width 200px
		position relative
	&-angonist
		test(aquamarine)
		display flex
		justify-content space-between
	&-player
		test(gray)
		display flex
		justify-content space-between